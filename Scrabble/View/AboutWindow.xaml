<Window x:Class="Scrabble.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scrabble2018.Properties"
        mc:Ignorable="d"
        Background="DarkCyan"
        Title="{x:Static local:Skin.AboutTitle}" Height="174" Width="258"
        ResizeMode="CanMinimize"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28.38"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="{x:Static local:Skin.Author}" HorizontalContentAlignment="Center" FontFamily="Georgia" Name="About" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="32" Width="238" Grid.ColumnSpan="2"/>
        <Label Content="{x:Static local:Skin.ScrabbleName}" HorizontalContentAlignment="Center" FontFamily="Georgia" FontSize="25" Foreground="Red" HorizontalAlignment="Left" Margin="14,114,0,0" VerticalAlignment="Top" Height="115" Width="174" Grid.Column="1"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="52" Margin="28,57,0,0" TextWrapping="Wrap" Text="{x:Static local:Skin.I18Nwiz}" VerticalAlignment="Top" Width="188" FontSize="8" TextAlignment="Center" FontFamily="Georgia"/>

    </Grid>
</Window>
